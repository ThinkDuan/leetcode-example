{
  "rules": {
    "semi": ["error","always",{"omitLastInOneLineBlock":true}],
    "semi-spacing": ["error",{"before":false}],
    "quotes": ["error", "single"],
    "indent": ["error", 2]
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "root": true
}